<Window x:Class="FIT.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIT"
        mc:Ignorable="d"        
        Title="FitMetric — Вход"
        Width="420" Height="418"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        ResizeMode="NoResize">

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20" HorizontalAlignment="Center">
                <TextBlock Text="FitMetric"
                       Foreground="#00A2FF"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
                <TextBlock Text="Войдите, чтобы продолжить"
                       Foreground="Gray"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Карточка -->
            <Border Grid.Row="1"
                Background="#2B2B2B"
                CornerRadius="15"
                Padding="25"
                VerticalAlignment="Center">

                <StackPanel Margin="0,0,0,0">

                    <!-- Логин -->
                    <TextBlock Text="Логин" Foreground="White" FontSize="14"/>
                    <Border Background="#333" CornerRadius="8" Margin="0,5,0,15">
                        <TextBox x:Name="LoginTextBox"
                             Height="40"
                             FontSize="14"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             Padding="10"/>
                    </Border>

                    <!-- Пароль -->
                    <TextBlock Text="Пароль" Foreground="White" FontSize="14"/>
                    <Border Background="#333" CornerRadius="8" Margin="0,5,0,15">
                        <PasswordBox x:Name="PasswordBox"
                                 Height="40"
                                 FontSize="14"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Padding="10"/>
                    </Border>

                    <!-- Кнопка -->
                    <Border CornerRadius="8" Background="#00A2FF">
                        <Button Content="Войти"
                            Height="45"
                            Click="LoginButton_Click"
                            Background="Transparent"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"/>
                    </Border>

                    <!-- Ошибка -->
                    <TextBlock x:Name="ErrorText"
                           Text="Неверный логин или пароль"
                           Foreground="Red"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Window>
